{% extends 'base.html.twig' %}

{% block title %}Admin Page
{% endblock %}

{% block body %}


	<div class="container">
		<section class="projet">
			<h1 class="mt-3 mb-4">Nos Projets</h1>
			<div class="row">
				<div class="col-3 h4">
					<strong>Title</strong>
				</div>
				<div class="col-5 h4">
					<strong>Content</strong>
				</div>
				<div class="col-4 h4">
					<strong>Action</strong>
				</div>
			</div>
			{% for projet in projets %}
				<div class="row my-1">
					<div class="col-3">
						{{projet.title}}
					</div>
					<div class="col-5" style="white-space: nowrap;overflow: hidden;text-overflow: ellipsis;">
						{{projet.content}}
					</div>
					<div class="col-4">
						<a class="btn btn-danger btn-ms" href="{{ path ('delete_post', {'id': projet.id}) }}"><i class="fas fa-trash-alt"></i></a>
						<a class="btn btn-success btn-ms" href="{{ path ('edit_post', {'id': projet.id}) }}"><i class="fas fa-edit"></i></a>
					</div>
				</div>
			{% endfor %}
			<a class="btn btn-primary btn-ms" href="{{ path ('add_post') }}"><i class="fas fa-plus-square"></i></a>
		</section>

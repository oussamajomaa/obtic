{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	{% for flashError in app.flashes('verify_email_error') %}
		<div class="alert alert-danger" role="alert">{{ flashError }}</div>
	{% endfor %}
	<div class="container" style="margin-top: 35vh; margin-bottom: 25vh;">
		<div class="row">
			<div class="col-md-3 col-ms-12"></div>
			<div class="col-md-6 col-ms-12 bg-light p-3" style="box-shadow: 3px 3px 5px 6px #444;">
				<h1>Register</h1>

				{{ form_start(registrationForm) }}
				{{ form_row(registrationForm.email) }}
				{{ form_row(registrationForm.plainPassword, {label: 'Password'}) }}
				{{ form_row(registrationForm.agreeTerms) }}

				<button type="submit" class="btn btn-lg my-3 w-100" id="register">Register</button>
				{{ form_end(registrationForm) }}
			</div>
		</div>
	</div>
{% endblock %}
